<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/item_labour_activity"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginHorizontal="5dp"
    android:paddingVertical="13dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/item_bg"
    android:weightSum="3">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/item_iv_labour_pic"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/example_head" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="XXX劳动实践"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_weight="5"/>

            <TextView
                android:id="@+id/item_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_radio_box"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_weight="2"/>

        </LinearLayout>

        <GridLayout
            android:id="@+id/item_gl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:rowCount="3"
            android:columnCount="4"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/labour_date"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/item_tv_labour_date"
                android:text="2022-3-20"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:textColor="@color/text_color"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:singleLine="true" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/labour_time"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/item_tv_labour_time"
                android:text="20:30"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                />

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/labour_account_num"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/item_tv_labour_account_num"
                android:text="200"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:singleLine="true"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/labour_type"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/item_tv_labour_type"
                android:text="其他劳动"
                android:textColor="@color/text_color"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/labour_place"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/item_tv_labour_place"
                android:text="八角楼"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:singleLine="true"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/labour_department"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/item_tv_labour_department"
                android:text="信息学院"
                android:textColor="@color/text_color"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:singleLine="true"
                android:ellipsize="end"/>

        </GridLayout>

    </LinearLayout>


</LinearLayout>